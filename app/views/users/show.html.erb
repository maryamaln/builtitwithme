<br>
<div class="container" style=" margin-top: 30px;
">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12 lead">User profile<hr></div>
          </div>
          <div class="row">
			<div class="col-md-4 text-center">
              <img class="img-circle avatar avatar-original" style="-webkit-user-select:none; 
              display:block; margin:auto;" src="http://robohash.org/sitsequiquia.png?size=120x120">
            </div>
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-12">
                  <h1 class="only-bottom-margin" style="color: purple"><%= @user.user_name %></h1>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <span class="text-muted">First Name:</span><%= @user.first_name %><br>
                  <span class="text-muted">Last Name:</span> <%= @user.last_name %><br>
                  <span class="text-muted">Email:</span> <%= @user.email %><br>
                  <span class="text-muted">Address:</span> <%= @user.address %><br>
                  <small class="text-muted">Created: <%= @user.created_at.to_date %></small>
                </div>
                <div class="col-md-6">
                  <div class="activity-mini">
                    <i class="glyphicon glyphicon-comment text-muted"></i> 500
                  </div>
                  <div class="activity-mini">
                    <i class="glyphicon glyphicon-thumbs-up text-muted"></i> 1500
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <hr><button class="btn btn-primary btn-back pull-right">Back :D </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('.btn-back').click(function(){
    window.location.href = "/all_users";
  });
</script>